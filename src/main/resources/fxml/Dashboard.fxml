<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gearrentpro.controller.DashboardController"
            fx:id="mainBorderPane">
    
    <!-- Top Bar -->
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="5">
            <Label text="GearRent Pro - Dashboard" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <VBox spacing="5" style="-fx-padding: 10;">
                <Label fx:id="userLabel" style="-fx-font-size: 12; -fx-text-fill: #ecf0f1;"/>
                <Label fx:id="roleLabel" style="-fx-font-size: 12; -fx-text-fill: #ecf0f1;"/>
                <Label fx:id="branchLabel" style="-fx-font-size: 12; -fx-text-fill: #ecf0f1;"/>
            </VBox>
        </VBox>
    </top>
    
    <!-- Left Menu -->
    <left>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #34495e;">
            <VBox fx:id="menuVBox" spacing="5" style="-fx-padding: 10; -fx-background-color: #34495e;">
            </VBox>
        </ScrollPane>
    </left>
    
    <!-- Center Content Area -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30; -fx-background-color: #ecf0f1;">
            <Label text="Welcome to GearRent Pro" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label text="Select an option from the menu to begin" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
        </VBox>
    </center>
</BorderPane>