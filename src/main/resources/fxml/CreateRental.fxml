<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gearrentpro.controller.CreateRentalController"
            fitToWidth="true" style="-fx-padding: 15;">
    
    <VBox spacing="15" style="-fx-padding: 15;">
        
        <Label text="Create New Rental" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <!-- Rental Details Section -->
        <VBox spacing="12" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #ecf0f1;">
            
            <Label text="Rental Details" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            
            <GridPane hgap="15" vgap="12">
                <!-- Row 1: Customer -->
                <Label text="Select Customer:" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                        style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="customerCombo" prefWidth="350" GridPane.columnIndex="1" GridPane.rowIndex="0"
                         style="-fx-font-size: 12; -fx-padding: 8;"/>
                
                <!-- Row 2: Category -->
                <Label text="Select Category:" GridPane.columnIndex="0" GridPane.rowIndex="1" 
                        style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="categoryCombo" prefWidth="350" GridPane.columnIndex="1" GridPane.rowIndex="1"
                         style="-fx-font-size: 12; -fx-padding: 8;"/>
                
                <!-- Row 3: Equipment -->
                <Label text="Select Equipment:" GridPane.columnIndex="0" GridPane.rowIndex="2" 
                        style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="equipmentCombo" prefWidth="350" GridPane.columnIndex="1" GridPane.rowIndex="2"
                         style="-fx-font-size: 12; -fx-padding: 8;"/>
                
                <!-- Row 4: Start Date -->
                <Label text="Rental Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" 
                        style="-fx-font-weight: bold;"/>
                <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3"
                           style="-fx-font-size: 12; -fx-padding: 8;"/>
                
                <!-- Row 5: End Date -->
                <Label text="Rental End Date:" GridPane.columnIndex="0" GridPane.rowIndex="4" 
                        style="-fx-font-weight: bold;"/>
                <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="4"
                           style="-fx-font-size: 12; -fx-padding: 8;"/>
            </GridPane>
        </VBox>
        
        <Separator/>
        
        <!-- Pricing Summary Section -->
        <VBox spacing="12" style="-fx-border-color: #27ae60; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #d5f4e6;">
            
            <Label text="Pricing Summary" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
            
            <HBox spacing="40" style="-fx-padding: 10;">
                
                <!-- Rental Amount Box -->
                <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 3;">
                    <Label text="Rental Amount" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                    <Label fx:id="rentalAmountLabel" text="LKR 0.00" style="-fx-font-size: 16; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                </VBox>
                
                <!-- Discounts Box -->
                <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 3;">
                    <Label text="Total Discounts" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                    <Label fx:id="discountLabel" text="LKR 0.00" style="-fx-font-size: 16; -fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
                </VBox>
                
                <!-- Security Deposit Box -->
                <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 3;">
                    <Label text="Security Deposit" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                    <Label fx:id="depositLabel" text="LKR 0.00" style="-fx-font-size: 16; -fx-text-fill: #f39c12; -fx-font-weight: bold;"/>
                </VBox>
                
                <!-- Final Amount Box -->
                <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #27ae60; -fx-border-color: #27ae60; -fx-border-width: 1; -fx-border-radius: 3;">
                    <Label text="Final Payable" style="-fx-font-weight: bold; -fx-font-size: 12; -fx-text-fill: white;"/>
                    <Label fx:id="finalAmountLabel" text="LKR 0.00" style="-fx-font-size: 18; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </VBox>
        
        <Separator/>
        
        <!-- Action Buttons -->
        <HBox spacing="15" style="-fx-padding: 10;">
            <Button onAction="#handleCreateRental" text="Create Rental" 
                    style="-fx-padding: 12 40; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;"/>
            <Button onAction="#clearForm" text="Clear Form" 
                    style="-fx-padding: 12 40; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand;"/>
        </HBox>
        
    </VBox>
</ScrollPane>