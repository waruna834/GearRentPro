<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearrentpro.controller.ReservationListController"
      spacing="10" style="-fx-padding: 15;">
    
    <Label text="Reservation Management" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <Label text="View and manage equipment reservations" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
    
    <!-- Search Bar -->
    <HBox spacing="10" style="-fx-padding: 10;">
        <TextField fx:id="searchField" promptText="Search by code, customer, or equipment..." 
                   HBox.hgrow="ALWAYS" style="-fx-font-size: 12; -fx-padding: 8;"/>
        <Button onAction="#handleSearch" text="ðŸ” Search" 
                style="-fx-padding: 8 20; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>
    
    <!-- Action Buttons -->
    <HBox spacing="10" style="-fx-padding: 10;">
        <Button onAction="#handleConvertToRental" text="âœ… Convert to Rental"
                style="-fx-padding: 10 25; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #28a745; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Button onAction="#handleCancelReservation" text="âŒ Cancel Reservation" 
                style="-fx-padding: 10 25; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #dc3545; -fx-text-fill: white; -fx-cursor: hand;"/>
    </HBox>
    
    <!-- Reservations Table -->
    <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 12;">
        <columns>
            <TableColumn fx:id="codeColumn" text="Reservation Code" prefWidth="140"/>
            <TableColumn fx:id="customerColumn" text="Customer Name" prefWidth="150"/>
            <TableColumn fx:id="equipmentColumn" text="Equipment" prefWidth="160"/>
            <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="120"/>
            <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>