<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearrentpro.controller.ManageUsersController"
      spacing="10" style="-fx-padding: 15;">
    
    <Label text="Manage System Users" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <Label text="Create and manage user accounts and access permissions" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
    
    <!-- Action Buttons -->
    <HBox spacing="10" style="-fx-padding: 10;">
        <Button onAction="#handleAddUser" text="Add New User" 
                style="-fx-padding: 10 25; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Button onAction="#handleUpdateUser" text="Edit Selected" 
                style="-fx-padding: 10 25; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Button onAction="#handleDeleteUser" text="Delete Selected" 
                style="-fx-padding: 10 25; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #dc3545; -fx-text-fill: white; -fx-cursor: hand;"/>
    </HBox>
    
    <!-- Users Table -->
    <TableView fx:id="userTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 12;">
        <columns>
            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="130"/>
            <TableColumn fx:id="nameColumn" text="Full Name" prefWidth="150"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
            <TableColumn fx:id="roleColumn" text="Role" prefWidth="120"/>
            <TableColumn fx:id="branchColumn" text="Branch" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>