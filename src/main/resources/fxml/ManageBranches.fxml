<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearrentpro.controller.ManageBranchesController"
      spacing="10" style="-fx-padding: 15;">
    
    <Label text="Manage Branches" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <Label text="Add, edit, and manage company branches" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
    
    <!-- Action Buttons -->
    <HBox spacing="10" style="-fx-padding: 10;">
        <Button onAction="#handleAddBranch" text="âž• Add New Branch" 
                style="-fx-padding: 10 25; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Button onAction="#handleUpdateBranch" text="âœï¸ Edit Selected" 
                style="-fx-padding: 10 25; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Button onAction="#handleDeleteBranch" text="ðŸ—‘ï¸ Delete Selected" 
                style="-fx-padding: 10 25; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #dc3545; -fx-text-fill: white; -fx-cursor: hand;"/>
    </HBox>
    
    <!-- Branches Table -->
    <TableView fx:id="branchTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 12;">
        <columns>
            <TableColumn fx:id="codeColumn" text="Branch Code" prefWidth="120"/>
            <TableColumn fx:id="nameColumn" text="Branch Name" prefWidth="150"/>
            <TableColumn fx:id="addressColumn" text="Address" prefWidth="200"/>
            <TableColumn fx:id="contactColumn" text="Contact Number" prefWidth="140"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>