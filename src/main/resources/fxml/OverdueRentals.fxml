<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearrentpro.controller.OverdueRentalsController"
      spacing="10" style="-fx-padding: 15;">
    
    <Label text="Overdue Rentals Management" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <Label text="Track and manage all overdue equipment rentals" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
    
    <!-- Action Buttons -->
    <HBox spacing="10" style="-fx-padding: 10;">
        <Button onAction="#handleContactCustomer" text="Contact Customer" 
                style="-fx-padding: 10 25; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #dc3545; -fx-text-fill: white; -fx-cursor: hand;"/>
    </HBox>
    
    <!-- Overdue Rentals Table -->
    <TableView fx:id="overdueTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 12;">
        <columns>
            <TableColumn fx:id="rentalCodeColumn" text="Rental Code" prefWidth="120"/>
            <TableColumn fx:id="customerColumn" text="Customer Name" prefWidth="140"/>
            <TableColumn fx:id="equipmentColumn" text="Equipment" prefWidth="150"/>
            <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="120"/>
            <TableColumn fx:id="daysOverdueColumn" text="Days Overdue" prefWidth="120"/>
            <TableColumn fx:id="phoneColumn" text="Contact Info" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>